{
  "private": true,
  "workspaces": [
    "packages/@merx/*"
  ],
  "scripts": {
    "clean": "rimraf packages/**/dist/*",
    "start": "git add . && git commit -m",
    "ci": "commit",
    "test": "nyc mocha",
    "release": "npm test && npm run build && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags",
    "lint": "eslint -c .eslintrc.cjs 'src/**/*.ts'",
    "lint:fix": "eslint --fix -c .eslintrc.cjs 'src/**/*.ts' --fix",
    "cz": "git-cz"
  },
  "author": "hongjia",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@commitlint/cz-commitlint": "^16.3.0",
    "@commitlint/format": "^12.1.1",
    "@commitlint/prompt-cli": "^16.3.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "commitizen": "^4.2.4",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "es5-shim": "^4.6.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "expect.js": "^0.3.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lerna": "^8.0.0",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.4",
    "source-map-support": "^0.5.21"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.23.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": {
        "extends": [
          "@commitlint/config-conventional"
        ]
      }
    }
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts,cts,mts}": [
      "prettier --write",
      "eslint --cache"
    ],
    "packages/**/bin/*": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}